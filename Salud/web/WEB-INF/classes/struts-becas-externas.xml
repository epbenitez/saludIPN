<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

    <package name="becasexternas"  namespace="/becasexternas" extends="default">
        
        <action name="*BecaExterna" class="com.becasipn.actions.catalogos.AdministracionBecaExternaAction" method="{1}">
            <result name="success">/WEB-INF/jsp/catalogos/becaExterna/{1}.jsp</result>
            <result name="lista">/WEB-INF/jsp/catalogos/becaExterna/lista.jsp</result>
            <result name="formulario">/WEB-INF/jsp/catalogos/becaExterna/form.jsp</result>
            <result name="bitacora">/WEB-INF/jsp/catalogos/becaExterna/bitacora.jsp</result>
        </action>
        
        <action name="*Excel" class="com.becasipn.actions.catalogos.AdministracionBecaExternaAction" method="{1}">
            <result name="archivo" type="stream">
                <param name="contentType">"application/csv"</param>
                <param name="inputName">excelStream</param>
                <param name="contentDisposition">contentDisposition</param>
                <param name="bufferSize">1024</param>
            </result>
        </action>
                
    </package>
</struts>