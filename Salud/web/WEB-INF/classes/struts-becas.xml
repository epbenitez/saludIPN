<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

    <package name="becas"  namespace="/becas" extends="default">

	<action name="*BajaBecas" class="com.becasipn.actions.becas.AdministracionBecasBajasAction" method="{1}" >
	    <result name="success">/WEB-INF/jsp/becas/bajas/{1}.jsp</result>
	    <result name="lista">/WEB-INF/jsp/becas/bajas/lista.jsp</result>
	    <result name="formulario">/WEB-INF/jsp/becas/bajas/form.jsp</result>
	</action>
        
	<action name="*Asignaciones" class="com.becasipn.actions.becas.AdministracionAsignacionesAction" method="{1}" >
	    <result name="success">/WEB-INF/jsp/becas/asignaciones/{1}.jsp</result>
	    <result name="formulario">/WEB-INF/jsp/becas/asignaciones/form.jsp</result>
	    <result name="lista">/WEB-INF/jsp/becas/asignaciones/lista.jsp</result>
	    <result name="validacion">/WEB-INF/jsp/alumno/permisoCambio/validacion.jsp</result>
	</action>
        
	<action name="subesOrdenesDeposito" class="com.becasipn.actions.becas.AdministracionOrdenesDepositoAction" method="subes" >
	    <result name="success">/WEB-INF/jsp/becas/OrdenesDeposito/{1}.jsp</result>
	    <result name="lista">/WEB-INF/jsp/becas/OrdenesDeposito/lista.jsp</result>
	    <result name="archivo" type="stream">
		<param name="contentType">"application/csv"</param>
		<param name="inputName">excelStream</param>
		<param name="contentDisposition">contentDisposition</param>
		<param name="bufferSize">1024</param>
	    </result>
	</action>
        
	<action name="*OrdenesDeposito" class="com.becasipn.actions.becas.AdministracionOrdenesDepositoAction" method="{1}" >
	    <result name="success">/WEB-INF/jsp/becas/OrdenesDeposito/{1}.jsp</result>
	    <result name="lista">/WEB-INF/jsp/becas/OrdenesDeposito/lista.jsp</result>
	    <result name="archivo" type="stream">
		<param name="contentType">"application/vnd.ms-excel"</param>
		<param name="inputName">excelStream</param>
		<param name="contentDisposition">contentDisposition</param>
		<param name="bufferSize">1024</param>
	    </result>
	</action>
        
	<action name="*EstatusSolicitud" class="com.becasipn.actions.becas.AdministraEstatusSolicitudAction" method="{1}" >
	    <interceptor-ref name="scope">
		<param name="session">alumno</param>
		<param name="type">middle</param>
		<param name="key">alumnoKey</param>
	    </interceptor-ref>
	    <interceptor-ref name="generalBecasIPN" />
	    <result name="success">/WEB-INF/jsp/becas/estatusSolicitud/form.jsp</result>
	    <result name="lista">/WEB-INF/jsp/becas/estatusSolicitud/lista.jsp</result>
	</action>

	<action name="*TarjetaBancaria" class="com.becasipn.actions.becas.AdministracionMonitoreoTarjetas" method="{1}" >
	    <result name="success">/WEB-INF/jsp/becas/monitoreoTarjeta/{1}.jsp</result>
	</action>
        
	<action name="*ExcluirAlumnosDeposito" class="com.becasipn.actions.becas.AdministracionExcluirAlumnosDepositoAction" method="{1}" >
	    <result name="success">/WEB-INF/jsp/becas/excluirAlumnosDeposito/{1}.jsp</result>
            <result name="editar">/WEB-INF/jsp/becas/excluirAlumnosDeposito/editar.jsp</result>
	    <result name="buscar">/WEB-INF/jsp/becas/excluirAlumnosDeposito/buscar.jsp</result>
	</action>
        
	<action name="*BecasDisponibles" class="com.becasipn.actions.becas.AdministracionBecasDisponiblesAction" method="{1}" >
	    <result name="success">/WEB-INF/jsp/becas/disponibles/{1}.jsp</result>
	    <result name="ver">/WEB-INF/jsp/becas/disponibles/ver.jsp</result>
	</action>
	
	<action name="*ResumenBecalos" class="com.becasipn.actions.admin.ReportesAction" method="{1}" >
	    <result name="error" type="redirect">/index.action</result>
	    <result name="success">/WEB-INF/jsp/reportes/{1}.jsp</result>
	    <result name="ver">/WEB-INF/jsp/reportes/resumenBecalos.jsp</result>
	    <result name="archivo" type="stream">
		<param name="contentType">"application/vnd.ms-excel"</param>
		<param name="inputName">excelStream</param>
		<param name="contentDisposition">contentDisposition</param>
		<param name="bufferSize">1024</param>
	    </result>
	</action>
    </package>

    
    
</struts>
